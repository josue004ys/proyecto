# JWT Configuration
JWT_SECRET=sistema-citas-medicas-jwt-secret-key-super-seguro-2024-2025
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

